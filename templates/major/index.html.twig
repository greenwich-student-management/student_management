{% extends 'admin.html.twig' %}

{% block title %}Hello MajorController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div className="page-heading pb-2 mt-4 mb-2 ">
                    <h3>Manager</h3> <a href="{{path('major_create')}}"><button type="button" class="btn btn-outline-primary">Insert</button></a>
                </div>
                <div class="page-content">
                <div class="btn-group" role="group" aria-label="Basic outlined example">
               
                </div>
                <div class="card">
                    <div class="container mb-3">
                        <div class="table-responsive text-nowrap">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th>Major ID</th>
                            <th>Major Name</th>
                            
                          </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                          {% for ms in Majors %}
                              <tr>
                                  <td>{{ ms.codemajor}}</td>
                                  <td>{{ ms.namemajor}}</td>
                                  
                                  <td>
                                    <a href="{{path('major_edit',{'id':ms.id})}}">Edit</a>
                                    <a href="{{path('major_delete',{'id':ms.id})}}">Delete</a></td>
                              </tr>
                          {% endfor %}
                          
                        </tbody>
                      </table>
                    </div>
                </div>
                </div>
                </div>

{% endblock %}
