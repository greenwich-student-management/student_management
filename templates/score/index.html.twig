{% extends 'admin.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
  <div className="page-heading pb-2 mt-4 mb-2 ">
                    <h3>Manager</h3> <a href="{{path('score_create')}}"><button type="button" class="btn btn-outline-primary">Insert</button></a>
                </div>
                <div class="page-content">
                <div class="btn-group" role="group" aria-label="Basic outlined example">
               
                </div>
                <div class="card">
                    <div class="container mb-3">
                        <div class="table-responsive text-nowrap">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th>#</th>
                            <th>Score</th>
                            <th>Code</th>
                            <th>Subject</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                          {% for sc in score %}
                              <tr>
                                  <td>{{ sc.id}}</td>
                                  <td>{{ sc.score}}</td>
                                  <td>{{ sc.student}}</td>
                                  <td>{{ sc.subject}}</td>
                                  <td>
                                    <a href="{{path('score_edit',{'id':sc.id})}}">Edit</a>
                                    <a href="{{path('score_delete',{'id':sc.id})}}">Delete</a></td>
                              </tr>
                          {% endfor %}
                          
                        </tbody>
                      </table>
                    </div>
                </div>
                </div>
                </div>
{% endblock %}
